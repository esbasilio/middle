{% extends 'admin/base.html.twig' %}

{% block content %}
    <div class="card card-custom">
        <div class="card-header">
            <div class="card-title">
                <h3 class="card-label">
                    {{ view.module.name|upper }}
                    {# <span class="d-block text-muted pt-2 font-size-sm">Datatable initialized from HTML table</span> #}
                </h3>
            </div>
            <div class="card-toolbar">
                <a href="{{ path(view.routes['new'].path) }}" class="btn btn-outline-primary">
                    <span class="svg-icon svg-icon-md">
                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                <polygon points="0 0 24 0 24 24 0 24"/>
                                <path d="M5.85714286,2 L13.7364114,2 C14.0910962,2 14.4343066,2.12568431 14.7051108,2.35473959 L19.4686994,6.3839416 C19.8056532,6.66894833 20,7.08787823 20,7.52920201 L20,20.0833333 C20,21.8738751 19.9795521,22 18.1428571,22 L5.85714286,22 C4.02044787,22 4,21.8738751 4,20.0833333 L4,3.91666667 C4,2.12612489 4.02044787,2 5.85714286,2 Z" fill="#000000" fill-rule="nonzero" opacity="0.3"/>
                                <path d="M11,14 L9,14 C8.44771525,14 8,13.5522847 8,13 C8,12.4477153 8.44771525,12 9,12 L11,12 L11,10 C11,9.44771525 11.4477153,9 12,9 C12.5522847,9 13,9.44771525 13,10 L13,12 L15,12 C15.5522847,12 16,12.4477153 16,13 C16,13.5522847 15.5522847,14 15,14 L13,14 L13,16 C13,16.5522847 12.5522847,17 12,17 C11.4477153,17 11,16.5522847 11,16 L11,14 Z" fill="#000000"/>
                            </g>
                        </svg>
                    </span>
                    {{ view.routes['new'].name|title }}
                </a>
            </div>
        </div>
        <div class="card-body">
            {% include "admin/ui/table/basic.html.twig"
                with {
                    table:
                    {
                        type : 'basic',
                        collection : response,
                        columns : [
                          
                            {   
                                thead:{
                                    value : 'key.trans.code'|trans,
                                    class : '',
                                    style : '',
                                    attr  : 'width=1%'
                                },
                                tbody:{
                                    value : 'strategy',
                                    type  : 'text',
                                    class : 'text-center',
                                    style : '',
                                    attr  : ''
                                }
                            },
                            {   
                                thead:{
                                    value : 'key.trans.name'|trans,
                                    class : '',
                                    style : '',
                                    attr  : ''
                                },
                                tbody:{
                                    value : 'name',
                                    type  : 'text',
                                    class : 'text-center',
                                    style : '',
                                    attr  : ''
                                }
                            },
                            {   
                                thead:{
                                    value : 'key.trans.is_active'|trans,
                                    class : '',
                                    style : '',
                                    attr  : ''
                                },
                                tbody:{
                                    value : 'isActive',
                                    type  : 'boolean',
                                    class : 'text-center',
                                    style : '',
                                    attr  : ''
                                }
                            },
                            {   
                                thead:{
                                    value : 'key.trans.logo'|trans,
                                    class : '',
                                    style : '',
                                    attr  : ''
                                },
                                tbody:{
                                    value : 'logo',
                                    type  : 'image',
                                    class : 'text-center',
                                    style : '',
                                    attr  : ''
                                }
                            },
                            {   
                                thead:{
                                    value : 'key.trans.action'|trans,
                                    class : '',
                                    style : '',
                                    attr  : 'width=1%'
                                },
                                tbody:{
                                    value : {
                                        edit : view.routes['edit'],
                                        delete : view.routes['delete'],
                                    },
                                    type  : 'botton',
                                    class : 'text-center with-btn',
                                    style : '',
                                    attr  : ''
                                }
                            }
                        ]
                    }
                }
            %}
        </div>
    </div>
    {% include "admin/ui/modal/prototype.html.twig"
        with {
            modal: { type : 'ajax', size: 'lg' }
        }
    %}
{% endblock %}