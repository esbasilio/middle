{% extends 'admin/base.html.twig' %}

{% block content %}
    <div class="card card-custom gutter-b">
        {{ form_start(form) }}
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 col-lg-4">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="col-md-4 col-lg-4">
                        {{ form_row(form.code) }}
                    </div>
                    <div class="col-md-4 col-lg-4">
                        {{ form_row(form.path) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-lg-4">
                        {{ form_row(form.view_type) }}
                    </div>
                    <div class="col-md-4 col-lg-4">
                        {{ form_row(form.icon) }}
                    </div>
                    <div class="col-md-4 col-lg-4">
                        {{ form_row(form.color) }}
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-lg-6">
                        <a href="{{ path(view.routes['list'].path) }}" class="btn btn-secondary">Cancelar</a>
                    </div>
                    <div class="col-lg-6 text-lg-right">
                        <button type="submit" class="btn btn-primary mr-2">Guardar</button>
                    </div>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
